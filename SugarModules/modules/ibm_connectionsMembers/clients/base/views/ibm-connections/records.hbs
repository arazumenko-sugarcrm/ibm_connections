{{! /Users/famchyk/work/sugarCRM/build/ult/sugarcrm/modules/ibm_connectionsMembers/clients/base/views/ibm-connections/records.hbs }}
<div class="tab-pane active">
    {{#if collection.length}}
    <ul class="unstyled listed" data-action="pagination-body">
        {{#each collection.models}}
        <li iid="{{getFieldValue this "id"}}" >
        <div class="pull-right actions">
            {{#if attributes.total_todos}}
            <div style="display: inline-block; margin-right: 10px;">
                {{str 'LBL_IBM-CONNECTIONS_LIST_TASKS' this.module}}: {{attributes.completed_todos}} /
                {{attributes.total_todos}}
            </div>

            <!--div class="progress" style="width: 100px; display: inline-block; margin-right: 10px;" >
                <div class="bar" style="width: 60%;"></div>
            </div -->

            <div class="progress" style="width: 100px; display: inline-block; margin-right: 10px;">
                <div class="bar" style="width: {{attributes.completion}}%;"></div>
            </div>
            {{/if}}

            {{#each ../../row_actions}}
            {{field ../../../this model=../this}}
            {{/each}}
        </div>

        <p>
            <a href="{{getFieldValue this "url"}}" class="pull-left avatar42" data-title="{{getFieldValue this "name"}}">
            <img src="{{getFieldValue this "picture"}}" alt="{{getFieldValue this "name"}}">
            </a>
            <a href="{{getFieldValue this "url"}}">{{getFieldValue this "name"}}</a>
        </p>

        <div style="clear: both;"></div>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <div class="block-footer">{{#if ../collection.dataFetched}}{{str "LBL_NO_DATA_AVAILABLE" this.module}}{{else}}{{str
        "LBL_LOADING" this.module}}{{/if}}
    </div>
    {{/if}}
</div>
